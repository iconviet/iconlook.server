@code {
    [Parameter]
    public string EditKey { get; set; }

    public bool CanEdit => !string.IsNullOrWhiteSpace(EditKey);
}
<style>
    .fal.fa-star {
        opacity: 0.75;
        color: #ffe100;
        margin-right: 4px;
    }

    .fas.fa-star, .fas.fa-star-half-alt {
        color: #ffe100;
        margin-right: 4px;
    }

    .e-chip-list.e-chip, .e-chip-list .e-chip {
        font-weight: 500;
        margin: 0 2px !important;
        font-size: 12px !important;
        font-family: 'IBM Plex Mono' !important;
    }
</style>
<EjsGrid TValue="PrepResponse" ModelType="PrepModelType" EnableAltRow="true" EnableHover="false" AllowSelection="@CanEdit" GridLines="GridLine.Horizontal">
