<div class="row mb-5">
    <div class="col">
        @code {

            public TabHeader Summary = new TabHeader { Text = "SUMMARY" };

            public TabHeader Background = new TabHeader { Text = "BACKGROUND" };

            public TabHeader Capability = new TabHeader { Text = "CAPABILITY" };

            public TabHeader Contribution = new TabHeader { Text = "CONTRIBUTION" };

            public TabHeader Transparency = new TabHeader { Text = "TRANSPARENCY" };

            public TabHeader ScoreMatrix = new TabHeader { Text = "SCORE MATRIX" };

            public TabAnimationSettings Animation { get; } = new TabAnimationSettings
            {
                Next = new TabAnimationNext { Duration = 0 },
                Previous = new TabAnimationPrevious { Duration = 0 }
            };
        }
        <EjsTab Animation="@Animation" CssClass="main card shadow-sm">
            <TabItems>
                <TabItem Header="@Summary">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListSummaryGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListSummaryGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="@Background">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListBackgroundGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListBackgroundGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="@Capability">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListCapabilityGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListCapabilityGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="@Contribution">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListContributionGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListContributionGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="@Transparency">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListTransparencyGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListTransparencyGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="@ScoreMatrix">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListScoreMatrixGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListScoreMatrixGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
            </TabItems>
        </EjsTab>
    </div>
</div>