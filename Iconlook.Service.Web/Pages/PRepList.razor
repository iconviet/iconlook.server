                <TabItem Header="Summary">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListSummaryGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListSummaryGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="Background">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListBackgroundGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListBackgroundGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="Capability">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <PRepListCapabilityGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListCapabilityGrid>
