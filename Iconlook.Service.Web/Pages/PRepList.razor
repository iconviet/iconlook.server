                            <PRepListScoreMatrixGrid EditKey="@Key" CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></PRepListScoreMatrixGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
            </TabItems>
        </EjsTab>
