@page "/prep-watcher"
@layout MainLayout
@inject PRepService Service
<style>
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card with-shadow border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <InfoBox Icon="fa-coins" Title="MARKET CAP" Value="$132,134,325"></InfoBox>
                        </div>
                        <div class="p-3 text-right">
                            <InfoBox Icon="fa-usd-circle" Title="SPOT PRICE" Value="$0.2538"></InfoBox>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="txt-0 secondary"><i class="fal pr-2 fa-users-class secondary"></i>VOTERS</div>
                            <div class="num-1 mono primary">32,250,300</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="txt-0 secondary"><i class="fal pr-2 fa-person-sign secondary"></i>ICX STAKED</div>
                            <div class="num-1 mono primary">132,250,456</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="txt-0 secondary"><i class="fal pr-2 fa-cube secondary"></i>BLOCK HEIGHT</div>
                            <div class="mono primary num-1-condensed">8,749,250</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="txt-0 secondary"><i class="fal pr-2 fa-exchange-alt secondary"></i>TRANSACTIONS</div>
                            <div class="mono primary num-1-condensed">38,749,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="txt-0 secondary"><i class="fal pr-2 fa-box-open secondary"></i>ALL SUPPLY</div>
                            <div class="primary mono num-1-condensed">800,000,000</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="txt-0 secondary"><i class="fal pr-2 fa-parachute-box secondary"></i>CIRCULATING</div>
                            <div class="mono primary num-1-condensed">490,000,000</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-5">
    <div class="col">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP WATCHER
                    </div>
                    <div class="col text-right">
                        <a href="/preps-watcher">MATRIX</a>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <EjsGrid ModelType="@PRep" DataSource="@PReps" EnableHover="false" AllowSorting="true" AllowSelection="false" GridLines="GridLine.Horizontal">
                    <GridColumns>
                        <GridColumn Width="30">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        if (prep.Direction)
                                        {
                                            <i class="fas fa-caret-up" style="color: limegreen;"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-caret-down" style="color: orangered;"></i>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="34" HeaderTextAlign="TextAlign.Left" HeaderText="#" Field="@nameof(PRep.Position)"></GridColumn>
                        <GridColumn Width="42">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        <img width="20" height="20" class="avatar" alt="@prep.Name" src="@prep.LogoUrl" />
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="200" HeaderText="Name" Field="@nameof(PRep.Name)"></GridColumn>
                        <GridColumn HeaderText="Location" Field="@nameof(PRep.Location)"></GridColumn>
                        <GridColumn Width="100" HeaderText="C_Score" Field="@nameof(PRep.CScore)" Format="N0" TextAlign="TextAlign.Right"></GridColumn>
                        <GridColumn Width="90" HeaderText="Voters" Field="@nameof(PRep.Voters)" Format="N0" TextAlign="TextAlign.Right"></GridColumn>
                        <GridColumn Width="115" HeaderText="ICX Staked" Field="@nameof(PRep.Votes)" Format="N0" TextAlign="TextAlign.Right"></GridColumn>
                        <GridColumn Width="105" HeaderText="% Supply" Field="@nameof(PRep.SupplyPercentage)" Format="P2" TextAlign="TextAlign.Center"></GridColumn>
                        <GridColumn Width="110" HeaderText="Last Seen" Field="@nameof(PRep.LastSeen)" TextAlign="TextAlign.Right"></GridColumn>
                        <GridColumn Width="110" HeaderText="% Uptime" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        if (prep.UptimePercentage > 0.5)
                                        {
                                            <span style="color: limegreen;">@prep.UptimePercentage.ToString("P")</span>
                                        }
                                        if (prep.UptimePercentage <= 0.5)
                                        {
                                            <span style="color: orangered;">@prep.UptimePercentage.ToString("P")</span>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                    </GridColumns>
                </EjsGrid>
            </div>
        </div>
    </div>
</div>

@code{
    public PRep PRep = new PRep();
    public List<PRep> PReps { get; set; }

    protected override async Task OnInitAsync()
    {
        PReps = await Service.GetLatestPRepsAsync();
    }

}