@page "/prep-watcher"
@layout MainLayout
@inject PRepService Service
<div class="row mb-3">
    <div class="col">
        <div class="card with-shadow" style="min-height: 50px;">
        </div>
    </div>
</div>
<div class="row mb-5">
    <div class="col">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP WATCHER
                    </div>
                    <div class="col text-right">
                        <a href="/preps-watcher">MATRIX</a>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <EjsGrid ModelType="@PRep" DataSource="@PReps" EnableHover="false" AllowSorting="true" GridLines="GridLine.Horizontal">
                    <GridColumns>
                        <GridColumn Width="34">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        if (prep.Direction)
                                        {
                                            <i class="fas fa-caret-up" style="color: limegreen;"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-caret-down" style="color: orangered;"></i>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="44" HeaderTextAlign="TextAlign.Left" HeaderText="#" Field="@nameof(PRep.Position)"></GridColumn>
                        <GridColumn Width="44" TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        <img width="20" height="20" class="avatar" alt="@prep.Name" src="@prep.LogoUrl" />
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="200" HeaderText="Name" Field="@nameof(PRep.Name)"></GridColumn>
                        <GridColumn Width="100" HeaderText="Votes" Field="@nameof(PRep.Votes)" Format="N0" TextAlign="TextAlign.Right"></GridColumn>
                        <GridColumn Width="45" HeaderText="% S" Field="@nameof(PRep.SupplyPercentage)" Format="P2" TextAlign="TextAlign.Center" HeaderTextAlign="TextAlign.Center"></GridColumn>
                        <GridColumn HeaderText="Location" Field="@nameof(PRep.Location)" TextAlign="TextAlign.Right"></GridColumn>
                    </GridColumns>
                </EjsGrid>
            </div>
        </div>
    </div>
</div>

@code{
    public PRep PRep = new PRep();
    public List<PRep> PReps { get; set; }

    protected override async Task OnInitAsync()
    {
        PReps = await Service.GetLatestPRepsAsync(40);
    }

}