@page "/prep-watcher"
@layout MainLayout
@inject PRepService Service
@using Syncfusion.EJ2.Blazor.Navigations
<style>
    
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card with-shadow border-bottom-0">
            <div class="container">
                <div class="row">
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <InfoBox Icon="fa-coins" Title="MARKET CAP" Value="$132,134,325"></InfoBox>
                        </div>
                        <div class="p-3 text-right">
                            <InfoBox Icon="fa-usd-circle" Title="SPOT PRICE" Value="$0.2538"></InfoBox>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-users-class secondary"></i>P-REP COUNT</div>
                            <div class="primary mono-font numeric">22<span class="secondary">(48)</span></div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-person-sign secondary"></i>VOTER COUNT</div>
                            <div class="primary mono-font numeric">32,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-cube secondary"></i>BLOCK HEIGHT</div>
                            <div class="primary mono-font numeric-condensed">8,749,250</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-exchange-alt secondary"></i>TRANSACTIONS</div>
                            <div class="primary mono-font numeric-condensed">38,749,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-box-open secondary"></i>ALL SUPPLY</div>
                            <div class="primary mono-font numeric-condensed">800,000,000</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-parachute-box secondary"></i>CIRCULATING</div>
                            <div class="primary mono-font numeric-condensed">490,000,000</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-5">
    <div class="col">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP WATCHER
                    </div>
                    <div class="col text-right">
                        <a href="/preps-watcher">MATRIX</a>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <EjsGrid ModelType="@PRep" DataSource="@PReps" EnableHover="false" AllowSorting="true" GridLines="GridLine.Horizontal">
                    <GridColumns>
                        <GridColumn Width="34">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        if (prep.Direction)
                                        {
                                            <i class="fas fa-caret-up" style="color: limegreen;"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-caret-down" style="color: orangered;"></i>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="44" HeaderTextAlign="TextAlign.Left" HeaderText="#" Field="@nameof(PRep.Position)"></GridColumn>
                        <GridColumn Width="44" TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        <img width="20" height="20" class="avatar" alt="@prep.Name" src="@prep.LogoUrl" />
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="200" HeaderText="Name" Field="@nameof(PRep.Name)"></GridColumn>
                        <GridColumn Width="100" HeaderText="Votes" Field="@nameof(PRep.Votes)" Format="N0" TextAlign="TextAlign.Right"></GridColumn>
                        <GridColumn Width="105" HeaderText="% Supply" Field="@nameof(PRep.SupplyPercentage)" Format="P2" TextAlign="TextAlign.Center"></GridColumn>
                        <GridColumn HeaderText="Location" Field="@nameof(PRep.Location)" TextAlign="TextAlign.Right"></GridColumn>
                    </GridColumns>
                </EjsGrid>
            </div>
        </div>
    </div>
</div>

@code{
    public PRep PRep = new PRep();
    public List<PRep> PReps { get; set; }

    protected override async Task OnInitAsync()
    {
        PReps = await Service.GetLatestPRepsAsync(40);
    }

}