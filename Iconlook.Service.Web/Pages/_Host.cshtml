@page "/"
@using Agiper
@namespace Iconlook.Service.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ var version = typeof(WebHost).Assembly.InformationVersion(); }
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="~/"/>
    <meta charset="utf-8"/>
    <title>ICONLOOK | ICON Ecosystem Explorer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="~/static/css/bundle.min.css?v=@version" rel="stylesheet"/>
</head>
<body>
<div id="components-reconnect-modal">
    <div class="d-flex h-100 flex-column text-center justify-content-center">
        <span class="reconnecting">Server disconnected. Reconnecting...</span>
        <span class="connection-lost">Server connection lost. Please refresh.</span>
    </div>
</div>
<app>@(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))</app>
<script src="~/static/js/bundle.min.js?v=@version"></script>
<script src="_framework/blazor.server.js?v=@version" autostart="false"></script>
<script>Blazor.start({ configureSignalR: function(builder) { builder.configureLogging(2); } });</script>
</body>
</html>