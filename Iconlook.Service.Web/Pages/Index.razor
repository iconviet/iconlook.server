@page "/"
<style type="text/css">
    .e-grid .e-rowcell {
        padding-left: 0 !important;
        padding-right: 0 !important;
    }

    .e-tab { background-color: white; }

    .e-grid .e-gridheader { display: none; }

    .main.card { height: 927px !important; }

    .main.card .e-grid { min-height: 880px; }

    .submit-button {
        font-weight: bold;
        padding: 9px 12px 7px 8px;
        color: #666666 !important;
        background-color: white !important;
    }

    .search-filter {
        font-weight: bold;
        color: #666666 !important;
        padding: 9px 10px 7px 10px;
        background-color: white !important;
    }

    .search-filter.e-dropdown-popup {
        padding: 0;
        color: #666666;
    }

