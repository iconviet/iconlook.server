@page "/"
@layout MainLayout
@inject PRepService PRepService
@inject TransactionService TransactionService
<style>
    .e-grid .e-row {
        height: 39px;
    }

    .e-grid .e-gridheader {
        display: none;
    }

    .e-grid .e-rowcell {
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card with-shadow border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col p-3 text-center border-bottom">
                        <div class="ascent subtext"><i class="fal pr-2 fa-clock secondary"></i>PRE-VOTING COUNTDOWN</div>
                        <div class="primary">15 days 4 hours 2 minutes</div>
                    </div>
                    <div class="col p-3 text-center border-right border-bottom">
                        <div class="ascent subtext"><i class="fal pr-2 fa-clock secondary"></i>ELECTION COUNTDOWN</div>
                        <div class="primary">15 days 4 hours 2 minutes</div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-cube secondary"></i>BLOCK HEIGHT</div>
                            <div class="primary mono-font numeric-condensed">8,749,250</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-exchange-alt secondary"></i>TRANSACTIONS</div>
                            <div class="primary mono-font numeric-condensed">38,749,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-box-open secondary"></i>ALL SUPPLY</div>
                            <div class="primary mono-font numeric-condensed">800,000,000</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-parachute-box secondary"></i>CIRCULATING</div>
                            <div class="primary mono-font numeric-condensed">490,000,000</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card px-4 pt-3 pb-4 with-shadow with-gradient with-rounded-corners">
            <h4 style="color: white;">
                <strong>ICON Ecosystem Explorer</strong>
            </h4>
            <div class="d-flex" style="background-color: white;">
                <div>
                    <EjsDropDownButton Items="@Items" CssClass="filter">ALL FILTERS</EjsDropDownButton>

                    @code {

                        public List<ItemModel> Items = new List<ItemModel>
                                                        {
                            new ItemModel { Text = "P-REP" },
                            new ItemModel { Text = "ADDRESS" },
                            new ItemModel { Text = "TRANSACTION" }
                        };

                    }
                </div>
                <div class="flex-grow-1">
                    <EjsTextBox CssClass="search-textbox" Placeholder="Search by P-Rep / Address / Transaction"></EjsTextBox>
                </div>
                <div>
                    <EjsButton CssClass="e-flat" IconCss="far fa-search">Search</EjsButton>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card with-shadow border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <InfoBox Icon="fa-coins" Title="MARKET CAP" Value="$132,134,325"></InfoBox>
                        </div>
                        <div class="p-3 text-right">
                            <InfoBox Icon="fa-usd-circle" Title="SPOT PRICE" Value="$0.2538"></InfoBox>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-users-class secondary"></i>P-REP COUNT</div>
                            <div class="primary mono-font numeric">22<span class="secondary">(48)</span></div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-person-sign secondary"></i>VOTER COUNT</div>
                            <div class="primary mono-font numeric">32,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-cube secondary"></i>BLOCK HEIGHT</div>
                            <div class="primary mono-font numeric-condensed">8,749,250</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-exchange-alt secondary"></i>TRANSACTIONS</div>
                            <div class="primary mono-font numeric-condensed">38,749,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom">
                        <div class="p-3 mr-auto">
                            <div class="secondary subtext"><i class="fal pr-2 fa-box-open secondary"></i>ALL SUPPLY</div>
                            <div class="primary mono-font numeric-condensed">800,000,000</div>
                        </div>
                        <div class="p-3 text-right">
                            <div class="secondary subtext"><i class="fal pr-2 fa-parachute-box secondary"></i>CIRCULATING</div>
                            <div class="primary mono-font numeric-condensed">490,000,000</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md mb-3 mr-sm-n2">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP WATCHER
                    </div>
                    <div class="col-auto text-right">
                        <a href="/prep-watcher">MORE</a>
                    </div>
                </div>
            </div>
            <div class="card-body px-4 pt-1 pb-2">
                <EjsGrid ModelType="@PRep" ID="prep-watcher" DataSource="@PReps" EnableHover="false" GridLines="GridLine.Horizontal">
                    <GridColumns>
                        <GridColumn Width="10">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        if (prep.Direction)
                                        {
                                            <i class="fas fa-caret-up" style="color: limegreen;"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-caret-down" style="color: orangered;"></i>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="28" HeaderText="Position" Field="@nameof(PRep.Position)" TextAlign="TextAlign.Center"></GridColumn>
                        <GridColumn Width="32" TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        <img width="20" height="20" class="avatar" alt="@prep.Name" src="@prep.LogoUrl" />
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="170" HeaderText="Name" Field="@nameof(PRep.Name)"></GridColumn>
                        <GridColumn HeaderText="Location" Field="@nameof(PRep.Location)"></GridColumn>
                        <GridColumn Width="44" HeaderText="ID" Field="@nameof(PRep.Id)" TextAlign="TextAlign.Right"></GridColumn>
                    </GridColumns>
                </EjsGrid>
            </div>
        </div>
    </div>
    <div class="col-md mb-3 ml-sm-n2">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="fal pr-2 fa-cube"></i>BLOCK WATCHER
                    </div>
                    <div class="col text-right">
                        <a href="/">MORE</a>
                    </div>
                </div>
            </div>
            <div class="card-body mono-font px-4 pt-1 pb-2">
                <EjsGrid ID="block-watcher" DataSource="@Transactions" AllowSelection="false" EnableHover="false" GridLines="GridLine.Horizontal">
                </EjsGrid>
            </div>
        </div>
    </div>
</div>
@code{
    public PRep PRep = new PRep();
    public List<PRep> PReps { get; set; }
    public List<Transaction> Transactions { get; set; }

    protected override async Task OnInitAsync()
    {
        PReps = await PRepService.GetLatestPRepsAsync(12);
        Transactions = await TransactionService.GetLatestTransactionsAsync();
    }

}