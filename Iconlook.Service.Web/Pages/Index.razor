@page "/"
@layout MainLayout
<style type="text/css">
    .e-grid { min-height: 480px; }
    
    .e-grid .e-rowcell {
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
    .e-grid .e-gridheader { display: none; }

    .search-input {
        background-color: white !important;
    }
    
    .search-button {
        background-color: white !important;
    }
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="pb-1 fs-n2 tx-light"><i class="fal pr-2 fa-coins tx-light"></i> 24H PRICE</div>
                            <div><span class="fs-1 tx-dark mono-lg font-weight-bold">$0.25</span>&nbsp;&nbsp;<span class="fs-1 mono-lg positive-dark" style="opacity: 0.75;">+5.06%</span></div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="pb-1 fs-n2 tx-light">MARKET CAP</div>
                            <div class="fs-1 tx-dark mono-lg">$132,134,325</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="pb-1 fs-n2 tx-light">TOTAL ICX STAKED</div>
                            <div><span class="fs-1 tx-dark mono-lg">132,250,456</span>&nbsp;<span class="mono-lg tx-light">(36.52%)</span></div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="pb-1 fs-n2 tx-light">24H CHANGE</div>
                            <span class="fs-1 mono-lg negative-dark" style="opacity: 0.75;">+2.78%</span>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="pb-1 fs-n2 tx-light">BLOCK HEIGHT</div>
                            <div class="fs-1 tx-dark mono-lg">18,749,250</div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="pb-1 fs-n2 tx-light">TRANSACTIONS</div>
                            <div class="fs-1 tx-dark mono-lg">138,749,250</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="pb-1 fs-n2 tx-light">TOTAL SUPPLY</div>
                            <div class="fs-1 tx-dark mono-lg">800,000,000</div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="pb-1 fs-n2 tx-light"><i class="fal pr-2 fa-box-open tx-light"></i>CIRCULATION</div>
                            <div class="fs-1 tx-dark mono-lg">490,000,000</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card px-4 pt-3 pb-4 rounded gradient shadow-sm border-0">
            <div class="row pb-1">
                <div class="col text-center" style="color: white;">
                    <h5 class="font-weight-bold">
                        ICONLOOK
                    </h5>
                </div>
            </div>
            <div class="row no-gutters" style="background-color: white;">
                <div class="col col-auto">
                    <EjsDropDownButton Items="@Items" CssClass="filter">ALL FILTERS</EjsDropDownButton>
                    @code {

                        public List<ItemModel> Items = new List<ItemModel>
                                        {
                            new ItemModel { Text = "P-REP" },
                            new ItemModel { Text = "ADDRESS" },
                            new ItemModel { Text = "TRANSACTION" }
                        };

                    }
                </div>
                <div class="col">
                    <EjsTextBox CssClass="search-input" Placeholder="Search by P-Rep / Address / Transaction"></EjsTextBox>
                </div>
                <div class="col col-auto">
                    <EjsButton CssClass="e-flat search-button" IconCss="far fa-search">Search</EjsButton>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col px-1 p-3 text-center border-right border-bottom">
                        <div><span class="special font-weight-bold">PRE-VOTING</span>&nbsp;&nbsp;<span class="fs-n2 tx-light">AUGUST 26</span></div>
                        <div class="tx-dark"><span class="tx-dark font-weight-semibold">15</span> days <span class="tx-dark font-weight-semibold">4</span> hours <span class="tx-dark font-weight-semibold">2</span> minutes</div>
                    </div>
                    <div class="col px-1 p-3 text-center border-right border-bottom">
                        <div><span class="special font-weight-bold">ICONSENSUS</span>&nbsp;&nbsp;<span class="fs-n2 tx-light">SEPTEMBER 24</span></div>
                        <div class="tx-dark"><span class="font-weight-semibold">43</span> days <span class="tx-dark font-weight-semibold">4</span> hours <span class="tx-dark font-weight-semibold">2</span> minutes</div>
                    </div>
                    <div class="col px-1 p-3 text-center border-right border-bottom">
                        <div><a class="primary font-weight-bold" href="/voters/who-can-i-vote">WHO SHOULD I VOTE?</a></div>
                        <div class="tx-dark">for P-Reps who have contribution <span class="mono font-weight-bold">score</span></div>
                    </div>
                    <div class="col px-1 p-3 text-center border-bottom">
                        <div><a class="primary font-weight-bold" href="/voters/why-should-i-care">WHY SHOULD I CARE?</a></div>
                        <div class="tx-dark">because your votes affect future <span class="mono font-weight-bold">price</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md mb-3 mr-sm-n2">
        <div class="card shadow-sm" style="min-height: 535px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP RANKING
                    </div>
                    <div class="col-auto pr-4 text-right">
                        <NavLink class="primary" href="preps">MORE</NavLink>
                    </div>
                </div>
            </div>
            <div class="card-body px-4 pt-1 pb-2">
                @code  {
                    public PrepResponse PrepModelType = new PrepResponse();
                }
                <EjsGrid TValue="PrepResponse" ModelType="PrepModelType" RowHeight="40" EnableHover="false" EnableAltRow="false" AllowSelection="false" GridLines="GridLine.Horizontal">
                    <EjsDataManager Url="/api/v1.0/preps?take=12" Adaptor="Adaptors.WebApiAdaptor"></EjsDataManager>
                    <GridColumns>
                        <GridColumn Width="14">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        if (prep.Direction)
                                        {
                                            <i class="fas fa-caret-up positive-light"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-caret-down negative-light"></i>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="32" HeaderText="Position" Field="@nameof(PrepResponse.Position)" TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        <span class="mono">@prep.Position</span>
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="36" TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        <img width="20" height="20" class="prep-@prep.Id rounded-circle" alt="@prep.Name" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAADIAAAAtAQMAAADWcaq8AAAAA1BMVEX///+nxBvIAAAAAXRSTlMAQObYZgAAAA1JREFUeNpjYBgF9AAAAWgAAUrs9XsAAAAASUVORK5CYII=">
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="135" HeaderText="Name">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        <a class="secondary font-weight-semibold" href="prep/@prep.Id">@prep.Name</a>
                                    }

                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="120" HeaderText="Votes" Field="@nameof(PrepResponse.Votes)" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        <span class="mono ls-n2">@prep.Votes.ToString("N0")</span>
                                        <span class="pl-1 tx-light">ICX</span>
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="65" HeaderText="% Supply" Field="@nameof(PrepResponse.SupplyPercentage)" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        <span class="mono tx-light">(@prep.SupplyPercentage.ToString("P"))</span>
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="65" HeaderText="% 24h Chg" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    if (context is PrepResponse prep)
                                    {
                                        if (prep.UptimePercentage > 0)
                                        {
                                            <span class="mono positive-dark">@prep.UptimePercentage.ToString("P")</span>
                                        }
                                        if (prep.UptimePercentage <= 0)
                                        {
                                            <span class="mono negative-dark">@prep.UptimePercentage.ToString("P")</span>
                                        }
                                    }
                                }
                            </Template>
                        </GridColumn>
                    </GridColumns>
                </EjsGrid>
            </div>
        </div>
    </div>
    <div class="col-md mb-3 ml-sm-n2">
        <div class="card shadow-sm" style="min-height: 535px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="fal pr-2 fa-cube"></i>BLOCK PRODUCTION
                    </div>
                    <div class="col pr-4 text-right">
                        <NavLink class="primary" href="transactions">MORE</NavLink>
                    </div>
                </div>
            </div>
            <div class="card-body px-4 pt-1 pb-2">
                @code  {
                    public BlockResponse BlockModelType = new BlockResponse();
                }
                <EjsGrid TValue="BlockResponse" ModelType="BlockModelType" RowHeight="40" EnableHover="false" EnableAltRow="false" AllowSelection="false" GridLines="GridLine.Horizontal">
                    <EjsDataManager Url="/api/v1.0/blocks?take=12" Adaptor="Adaptors.WebApiAdaptor"></EjsDataManager>
                </EjsGrid>
            </div>
        </div>
    </div>
</div>