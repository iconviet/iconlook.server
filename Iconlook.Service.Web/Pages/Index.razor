@page "/"
@layout MainLayout
@inject PRepService PRepService
@inject TransactionService TransactionService
<style>
    .e-grid .e-row {
        height: 39px;
    }
    .e-grid .e-gridheader {
        display: none;
    }
    .e-grid .e-rowcell {
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card px-4 pt-3 pb-4 with-shadow with-gradient with-rounded-corners">
            <h4 style="color: white;">
                <strong>ICON Ecosystem Explorer</strong>
            </h4>
            <div class="d-flex" style="background-color: white;">
                <div>
                    <EjsDropDownButton Items="@Items" CssClass="filter">ALL FILTERS</EjsDropDownButton>

                    @code {

                        public List<ItemModel> Items = new List<ItemModel>
                        {
                            new ItemModel { Text = "P-REP" },
                            new ItemModel { Text = "ADDRESS" },
                            new ItemModel { Text = "TRANSACTION" }
                        };

                    }

                </div>
                <div class="flex-grow-1">
                    <EjsAutoComplete Placeholder="Search by P-Rep / Address / Transaction"></EjsAutoComplete>
                </div>
                <div>
                    <EjsButton CssClass="e-flat" IconCss="far fa-search">Search</EjsButton>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card with-shadow">
            <div class="container">
                <div class="row justify-content-lg-between">
                    <div class="col p-3">
                        <div>TOTAL SUPPLY</div>
                        <div>400,000,000</div>
                    </div>
                    <div class="col p-3">
                        <div>TOTAL SUPPLY</div>
                        <div>400,000,000</div>
                    </div>
                    <div class="col p-3">
                        <div>TOTAL SUPPLY</div>
                        <div>400,000,000</div>
                    </div>
                </div>
                <div class="row justify-content-lg-between">
                    <div class="col p-3">
                        <div>TOTAL SUPPLY</div>
                        <div>400,000,000</div>
                    </div>
                    <div class="col p-3">
                        <div>TOTAL SUPPLY</div>
                        <div>400,000,000</div>
                    </div>
                    <div class="col p-3">
                        <div>TOTAL SUPPLY</div>
                        <div>400,000,000</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-5">
    <div class="col">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP WATCHER
                    </div>
                    <div class="col text-right">
                        <a href="/prep-directory">MORE</a>
                    </div>
                </div>
            </div>
            <div class="card-body px-4 pt-1 pb-2">
                <EjsGrid ModelType="@PRep" ID="prep-watcher" DataSource="@PReps" EnableHover="false" GridLines="GridLine.Horizontal">
                    <GridColumns>
                        <GridColumn Width="24" HeaderText="Rank" Field="@nameof(PRep.Rank)"></GridColumn>
                        <GridColumn Width="32">
                            <Template>
                                @{
                                    if (context is PRep prep)
                                    {
                                        <img width="20" height="20" class="avatar" alt="@prep.Name" src="@prep.LogoUrl"/>
                                    }
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Width="170" HeaderText="Name" Field="@nameof(PRep.Name)"></GridColumn>
                        <GridColumn HeaderText="Location" Field="@nameof(PRep.Location)"></GridColumn>
                        <GridColumn Width="44" HeaderText="ID" Field="@nameof(PRep.Id)" TextAlign="TextAlign.Right"></GridColumn>
                    </GridColumns>
                </EjsGrid>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card with-shadow" style="min-height: 500px;">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-cube"></i>BLOCK WATCHER
                    </div>
                    <div class="col text-right">
                        <a href="/block-watcher">MORE</a>
                    </div>
                </div>
            </div>
            <div class="card-body mono-font px-4 pt-1 pb-2">
                <EjsGrid ID="block-watcher" DataSource="@Transactions" AllowSelection="false" EnableHover="false" GridLines="GridLine.Horizontal">
                </EjsGrid>
            </div>
        </div>
    </div>
</div>

@code{
    public PRep PRep = new PRep();
    public List<PRep> PReps { get; set; }
    public List<Transaction> Transactions { get; set; }

    protected override async Task OnInitAsync()
    {
        PReps = await PRepService.GetLatestPRepsAsync(12);
        Transactions = await TransactionService.GetLatestTransactionsAsync();
    }

}