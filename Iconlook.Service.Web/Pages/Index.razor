            <div class="pr-5 d-inline-flex">
                <i class="fad mr-3 fa-mobile-alt text-white" style="font-size: 20px;"></i>
                <a class="flex-fill text-white text-center font-weight-semibold" href="/">Mobile app coming soon</a>
            </div>
        </div>
    </div>
    <div class="col-xl mb-3 d-none d-md-block">
        <div class="px-3 py-3 card rounded gradient shadow-sm border-0">
            <div class="pr-5 d-inline-flex">
                <i class="fad mr-3 fa-user-secret text-white" style="font-size: 20px;"></i>
                <a class="flex-fill text-white text-center font-weight-semibold" href="/">Vote buying is a crime</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md mb-3 mr-md-n3">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <StakingTile ChainResponse="ChainResponse"></StakingTile>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <VotingTile ChainResponse="ChainResponse"></VotingTile>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md mb-3">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <PRepTermTile ChainResponse="ChainResponse"></PRepTermTile>
                    </div>
                    <div class="col leader-tile d-inline-flex border-bottom">
                        <LeaderTile PeerResponse="PeerResponse"></LeaderTile>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm mr-sm-n3">
        <div class="main card mb-3 shadow-sm" style="min-height: 927px;">
            <EjsTab Animation="Animation" EnablePersistence="true">
                <TabEvents Selecting="Select"/>
                <TabItems>
                    <TabItem Header="Governance">
                        <ContentTemplate>
                            <div class="card-body pt-1 pb-0">
                                <IndexGovernanceGrid></IndexGovernanceGrid>
                            </div>
                        </ContentTemplate>
                    </TabItem>
                    <TabItem Header="Production">
                        <ContentTemplate>
                            <div class="card-body pt-1 pb-0">
                                <IndexProductionGrid></IndexProductionGrid>
                            </div>
                        </ContentTemplate>
                    </TabItem>
                </TabItems>
            </EjsTab>
        </div>
        <div class="font-weight-bold position-absolute" style="top: 11px; right: 34px;">
            <NavLink class="primary" href="preps">MORE</NavLink>
        </div>
    </div>
    <div class="col-sm">
        <div class="main card mb-3 shadow-sm" style="min-height: 927px;">
            <EjsTab Animation="Animation" EnablePersistence="true">
                <TabEvents Selecting="Select"/>
                <TabItems>
                    <TabItem Header="Blocks">
                        <ContentTemplate>
                            <div class="card-body pt-1 pb-0">
                                <IndexBlocksGrid></IndexBlocksGrid>
                            </div>
                        </ContentTemplate>
                    </TabItem>
                    <TabItem Header="Transactions">
                        <ContentTemplate>
                            <div class="card-body pt-1 pb-0">
                                <IndexTransactionsGrid></IndexTransactionsGrid>
                            </div>
                        </ContentTemplate>
