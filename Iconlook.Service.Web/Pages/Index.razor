@page "/"
@using ItemModel = Syncfusion.EJ2.Blazor.SplitButtons.ItemModel
<style type="text/css">
    .e-grid { min-height: 521px; }

    .e-grid .e-rowcell {
        padding-left: 0 !important;
        padding-right: 0 !important;
    }

    .e-grid .e-gridheader { display: none; }

    .search-input { background-color: white !important; }

    .search-button { background-color: white !important; }
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 tx-light">PRICE&nbsp;&nbsp;&nbsp;&nbsp;% 24H</div>
                            <div><span class="fs-2 tx-dark mono-lg">$0.25</span>&nbsp;&nbsp;<span class="mono-lg positive-dark" style="opacity: 0.75;">+5.06%</span></div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 tx-light">MARKET CAP</div>
                            <div class="fs-2 tx-dark mono-lg">115,531,667</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 tx-light">ICX STAKED&nbsp;&nbsp;&nbsp;&nbsp;% SPLY</div>
                            <div><span class="fs-2 tx-dark mono-lg">132,250,456</span>&nbsp;&nbsp;<span class="mono-lg tx-light">36.52%</span></div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 tx-light">% 24H</div>
                            <span class="fs-2 mono-lg negative-dark" style="opacity: 0.75;">+2.78%</span>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom border-right">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 tx-light">ICX CIRCULATION</div>
                            <div class="fs-2 tx-dark mono-lg">490,453,304</div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 tx-light">% 24H DEFL</div>
                            <span class="fs-2 mono-lg positive-dark" style="opacity: 0.75;">0.1578%</span>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 tx-light">TRANSACTIONS</div>
                            <div class="fs-2 tx-dark mono-lg">69,369,895</div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 tx-light">BLOCK HEIGHT</div>
                            <div class="fs-2 tx-dark mono-lg">7,130,908</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card px-4 pt-3 pb-4 rounded gradient shadow-sm border-0">
            <div class="row pb-1">
                <div class="col text-center" style="color: white;">
                    <h5 class="font-weight-bold">
                        ICON ECOSYSTEM EXPLORER
                    </h5>
                </div>
            </div>
            <div class="row no-gutters" style="background-color: white;">
                <div class="col col-auto">
                    <EjsDropDownButton Items="@Items" CssClass="filter">ALL FILTERS</EjsDropDownButton>
                    @code {

                        public List<ItemModel> Items = new List<ItemModel>
                        {
                            new ItemModel { Text = "P-REP" },
                            new ItemModel { Text = "ADDRESS" },
                            new ItemModel { Text = "TRANSACTION" }
                        };

                    }
                </div>
                <div class="col">
                    <EjsTextBox CssClass="search-input" Placeholder="Search by P-Rep / Address / Transaction"></EjsTextBox>
                </div>
                <div class="col col-auto">
                    <EjsButton CssClass="e-flat search-button" IconCss="far fa-search">Search</EjsButton>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col px-1 p-3 text-center border-right border-bottom">
                        <div><span class="special font-weight-bold">PRE-VOTING</span>&nbsp;&nbsp;<span class="fs-n3 tx-light">AUGUST 26</span></div>
                        <div class="pt-1 tx-dark"><span class="tx-dark font-weight-semibold">15</span> days <span class="tx-dark font-weight-semibold">4</span> hours <span class="tx-dark font-weight-semibold">2</span> minutes</div>
                    </div>
                    <div class="col px-1 p-3 text-center border-right border-bottom">
                        <div><span class="special font-weight-bold">P-REP ELECTION</span>&nbsp;&nbsp;<span class="fs-n3 tx-light">SEP 24</span></div>
                        <div class="pt-1 tx-dark"><span class="font-weight-semibold">43</span> days <span class="tx-dark font-weight-semibold">4</span> hours <span class="tx-dark font-weight-semibold">2</span> minutes</div>
                    </div>
                    <div class="col px-1 p-3 text-center border-right border-bottom">
                        <div>
                            <a class="primary font-weight-bold" href="/">WHO SHOULD I VOTE?</a>
                        </div>
                        <div class="pt-1 tx-dark">for P-Reps who have contribution <span class="mono font-weight-bold">score</span></div>
                    </div>
                    <div class="col px-1 p-3 text-center border-bottom">
                        <div>
                            <a class="primary font-weight-bold" href="/">WHY SHOULD I CARE?</a>
                        </div>
                        <div class="pt-1 tx-dark">because your votes affect future <span class="mono font-weight-bold">price</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md mr-sm-n2">
        <div class="card shadow-sm">
            <div class="card-header">
                <div class="row px-2 align-items-center">
                    <div class="col">
                        <i class="fal pr-2 fa-user-clock"></i>P-REP INFORMATION
                    </div>
                    <div class="col-auto text-right">
                        <NavLink class="primary" href="preps">MORE</NavLink>
                    </div>
                </div>
            </div>
            <div class="card-body px-4 pt-1 pb-1" style="min-height: 521px;">
                <IndexPrepInformationGrid></IndexPrepInformationGrid>
            </div>
        </div>
    </div>
    <div class="col-md ml-sm-n2">
        @code{
            public void Cancel(SelectingEventArgs args)
            {
                if (args.IsSwiped)
                {
                    args.Cancel = true;
                }
            }

            public TabHeader Blocks = new TabHeader { Text = "BLOCKS" };

            public TabHeader Transactions = new TabHeader { Text = "TRANSACTIONS" };
        }
        <EjsTab CssClass="card shadow-sm">
            <TabEvents Selecting="Cancel"></TabEvents>
            <TabItems>
                <TabItem Header="@Blocks">
                    <ContentTemplate>
                        <div class="card-body px-4 pt-0 pb-1" style="min-height: 521px;">
                            <IndexBlockGrid></IndexBlockGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
                <TabItem Header="@Transactions">
                    <ContentTemplate>
                        <div class="card-body px-4 pt-0 pb-1" style="min-height: 521px;">
                            <IndexTransactionGrid></IndexTransactionGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
            </TabItems>
         </EjsTab>
    </div>
</div>