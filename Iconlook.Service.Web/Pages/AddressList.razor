@page "/addresses"
<style type="text/css">
    .e-grid { min-height: 700px; }

    .main.card { min-height: 740px; }

    .e-grid .e-rowcell,
    .e-grid .e-headercell {
        padding-left: 5px !important;
        padding-right: 5px !important;
    }

    .e-grid .e-rowcell:last-child,
    .e-grid .e-headercell:last-child {
        padding-left: 5px !important;
        padding-right: 20px !important;
    }

    .e-grid .e-rowcell:first-child,
    .e-grid .e-headercell:first-child {
        padding-left: 20px !important;
        padding-right: 5px !important;
    }
</style>
<div class="row mb-3">
    <div class="col">
        <div class="card shadow-sm border-bottom-0">
            <div class="container">
                <div class="row text-nowrap">
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 text-light">STAKED&nbsp;&nbsp;&nbsp;•&nbsp;&nbsp;&nbsp;% SUPPLY</div>
                            <div><span class="fs-1 mono-lg text-dark ChainResponse_TotalStaked">0</span>&nbsp;<span class="mono-lg text-light">•</span>&nbsp;<span class="mono-lg primary">18.07%</span></div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 text-light">UNSTAKING</div>
                            <div class="fs-1 mono-lg text-dark">885,638</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 text-light">VOTED&nbsp;&nbsp;&nbsp;•&nbsp;&nbsp;&nbsp;% STAKED</div>
                            <div><span class="fs-1 mono-lg text-dark ChainResponse_TotalDelegated">0</span>&nbsp;<span class="mono-lg text-light">•</span>&nbsp;<span class="mono-lg primary">98.95%</span></div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 text-light">VOTERS</div>
                            <div class="fs-1 mono-lg text-dark">15,638</div>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-right border-bottom">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 text-light">PUBLIC TREASURY</div>
                            <div class="fs-1 mono-lg text-dark">
                                <span class="ChainResponse_PublicTreasury">0</span><span class="fs-n2 text-light font-weight-light">.1699</span>
                            </div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 text-light">% 24H CHG.</div>
                            <span class="fs-1 mono-lg positive-dark" style="opacity: 0.75;">0.1578%</span>
                        </div>
                    </div>
                    <div class="col d-inline-flex border-bottom leader">
                        <div class="px-1 py-3 mr-auto">
                            <div class="py-1 fs-n3 text-light">
                                <span>LEADER</span>&nbsp;
                                <span class="leader-ranking font-weight-bold">#@(PeerResponse?.Ranking.ToString() ?? "0")</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <img width="16" height="16" style="margin-right: 8px;" class="leader-logo" src="@(PeerResponse?.LogoUrl ?? "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAADIAAAAtAQMAAADWcaq8AAAAA1BMVEX///+nxBvIAAAAAXRSTlMAQObYZgAAAA1JREFUeNpjYBgF9AAAAWgAAUrs9XsAAAAASUVORK5CYII=")">
                                <a class="text-dark text-condensed font-weight-semibolder leader-name" href="address/hx47cd300865284000bdb154a90fc13e6a7bb2421e">@(PeerResponse?.Name.SafeSubstring(0, 24) ?? "❚")</a>
                            </div>
                        </div>
                        <div class="px-1 py-3 text-right">
                            <div class="py-1 fs-n3 text-light">
                                <span class="font-weight-bold leader-block-mcount">@(PeerResponse?.MadeBlockCount.ToString() ?? "0")</span>
                                <span>&nbsp;BLOCKS MADE</span>
                            </div>
                            <div class="fs-2 mono-lg">
                                <span class="positive-light leader-block-elapse"></span><span class="text-light leader-block-remain">❚❚❚❚❚❚❚❚❚❚</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg mb-3 mr-lg-n4">
        <div class="px-1 p-3 card rounded gradient shadow-sm border-0">
            <div class="d-inline-flex">
                <div class="ml-2 mr-4">
                    <i class="fad fa-info text-white" style="font-size: 41px;"></i>
                </div>
                <div>
                    <div class="d-flex">
                        <a class="text-white font-weight-bold" href="/">VOTE FOR US</a>
                    </div>
                    <div class="pt-1 text-white">we have contributed shit load, vote for us <span class="mono font-weight-bold">now</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg mb-3 mr-lg-n4">
        <div class="px-1 p-3 card rounded gradient shadow-sm border-0">
            <div class="d-inline-flex">
                <div class="ml-2 mr-3">
                    <i class="fad fa-circle text-white" style="font-size: 41px;"></i>
                </div>
                <div>
                    <div class="d-flex">
                        <a class="text-white font-weight-bold" href="/">CONTRIBUTION DAO</a>
                    </div>
                    <div class="pt-1 text-white">alternative on-chain radical voting <span class="mono font-weight-bold">proposal</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg mb-3">
        <div class="px-1 p-3 card rounded gradient shadow-sm border-0">
            <div class="d-inline-flex">
                <div class="ml-2 mr-3">
                    <i class="fad fa-mobile-alt text-white" style="font-size: 41px;"></i>
                </div>
                <div>
                    <div class="d-flex">
                        <a class="text-white font-weight-bold" href="/">ICONLOOK MOBILE</a>
                    </div>
                    <div class="pt-1 text-white">Android and iOS apps is coming soon <span class="mono font-weight-bold">boys!</span></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-5">
    <div class="col">
        <EjsTab Animation="Animation" CssClass="main card shadow-sm">
            <TabEvents Selecting="Select" />
            <TabItems>
                <TabItem Header="Unstaking">
                    <ContentTemplate>
                        <div class="card-body px-0 pt-0 pb-1" style="min-height: 700px;">
                            <AddressListUnstakingGrid CanPage="@Page" PageSize="@Size" PageSizes="@Sizes"></AddressListUnstakingGrid>
                        </div>
                    </ContentTemplate>
                </TabItem>
            </TabItems>
        </EjsTab>
    </div>
</div>
@code {

    public void Select(SelectingEventArgs args)
    {
        if (args.IsSwiped)
        {
            args.Cancel = true;
        }
    }

}