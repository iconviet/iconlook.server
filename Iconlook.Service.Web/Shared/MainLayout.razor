@inherits LayoutComponentBase
<div class="body">
    <header>
        <div class="container">
            <div class="row py-1 no-gutters align-items-center">
                <div class="col-auto" style="margin-left: -16px;">
                    <img alt="ICONVIET" src="images/iconviet-logo.png" style="max-width: 105px;" />
                </div>
                <div class="col text-right">
                    <EjsMenu Items="@MenuItems" CssClass="ejs-menu"></EjsMenu>
                </div>
                <div class="col-auto pt-1">
                    <EjsSwitch Checked="true"></EjsSwitch>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            @Body
        </div>
    </main>
    <footer class="with-gradient">
        <div class="container">
            <div class="row">
                <div class="col" style="height: 200px;">
                </div>
            </div>
        </div>
    </footer>
</div>
