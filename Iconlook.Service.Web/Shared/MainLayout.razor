@inherits LayoutComponentBase
@using Syncfusion.EJ2.Blazor.Buttons
@using Syncfusion.EJ2.Blazor.Navigations
<div class="body">
    <header>
        <div class="container">
            <div class="row py-1">
                <div class="col pl-0 d-flex align-items-center">
                    <div>
                        <img alt="ICONVIET" src="images/iconviet-logo.png" style="max-width: 105px;" />
                    </div>
                    <div class="flex-grow-1 text-right">
                        <EjsMenu Items="@MenuItems" CssClass="ejs-menu"></EjsMenu>
                    </div>
                    <div>
                        <EjsSwitch Checked="true"></EjsSwitch>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col">
                    @Body
                </div>
            </div>
        </div>
    </main>
    <footer class="gradient-filled">
        <div class="container">
            <div class="row">
                <div class="col" style="height: 200px;">
                </div>
            </div>
        </div>
    </footer>
</div>
