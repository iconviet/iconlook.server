<Router AppAssembly="@typeof(WebHost).Assembly">
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
    <Found Context="context">
        <RouteView RouteData="@context" DefaultLayout="@typeof(MainLayout)" />
    </Found>
</Router>