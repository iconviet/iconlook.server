<div class="px-1 py-3 flex-fill">
    <div class="py-1 fs-n3 text-light">ANNUAL REWARD</div>
    <div>
        <span class="fs-1 mono-lg primary ChainResponse_RRepPercentage">
            @(ChainResponse?.RRepPercentage.ToString("P2") ?? "0.00%")
        </span>&nbsp;
        <span class="fs-n2 ls-n1 mono text-light">
            <i>( r<sub>rep</sub> * 3 )</i>
        </span>
    </div>
</div>
<div class="px-1 py-3 flex-fill text-right">
    <div class="py-1 fs-n3 text-light">PUBLIC TREASURY</div>
    <div class="fs-2 ls-n1 mono-lg ChainResponse_PublicTreasury" number="@(ChainResponse?.PublicTreasury ?? 0)">
        @(ChainResponse?.PublicTreasury.ToString("N0") ?? "0")
    </div>
</div>

@code {
    [Parameter]
    public ChainResponse ChainResponse { get; set; }

    protected override bool ShouldRender()
    {
        return false;
    }
}