<div class="px-1 py-3 flex-fill">
    <div class="py-1 fs-n3 text-light">VOTED&nbsp;&nbsp;•&nbsp;&nbsp;% SUPPLY</div>
    <div>
        <span class="fs-2 ls-n1 mono-lg ChainResponse_TotalDelegated" number="@(ChainResponse?.TotalDelegated ?? 0)">@(ChainResponse?.TotalDelegated.ToString("N0") ?? "0")</span>
        <span class="mono-lg text-light">•</span>
        <span class="mono-lg primary ChainResponse_DelegatedPercentage">@(ChainResponse?.DelegatedPercentage.ToString("P2") ?? "0.00%")</span>
    </div>
</div>
<div class="px-1 py-3 flex-fill text-right">
    <div class="py-1 fs-n3 text-light">
        <i class="fal pr-2 fa-user" data-toggle="tooltip" title="Total number of unique stakers / voters."></i>VOTERS
    </div>
    <div class="fs-2 ls-n1 mono-lg ChainResponse_StakingAddressCount" number="@(ChainResponse?.StakingAddressCount ?? 0)">
        @(ChainResponse?.StakingAddressCount.ToString("N0") ?? "0")
    </div>
</div>

@code {
    [Parameter]
    public ChainResponse ChainResponse { get; set; }

    protected override bool ShouldRender()
    {
        return false;
    }
}