@code {
    [Parameter]
    public ChainResponse ChainResponse { get; set; }
}

<div class="px-1 py-3 flex-fill">
    <div class="py-1 fs-n3 text-light">USD PRICE&nbsp;&nbsp;•&nbsp;&nbsp;% 24H</div>
    <div>
        <span class="fs-2 ls-n1 mono-lg ChainResponse_IcxPrice" number="@(ChainResponse?.IcxPrice ?? 0)">
            @(ChainResponse?.IcxPrice.ToString("C4") ?? "$0.0000")
        </span>
        <span class="mono-lg text-light">•</span>
        <span class="mono-lg positive-dark ChainResponse_IcxPricePercentage">4.02%</span>
    </div>
</div>
<div class="px-1 py-3 flex-fill text-right">
    <div class="py-1 fs-n3 text-light">USD MARKET CAP</div>
    <div class="fs-2 ls-n1 mono-lg ChainResponse_MarketCap" number="@(ChainResponse?.MarketCap ?? 0)">
        @(ChainResponse?.MarketCap.ToString("C0") ?? "$0")
    </div>
</div>