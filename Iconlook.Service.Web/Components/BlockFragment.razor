@code {
    [Parameter]
    public ChainResponse ChainResponse { get; set; }
}
<div class="px-1 py-3 mr-auto">
    <div class="py-1 fs-n3 text-light">TRANSACTIONS</div>
    <div class="fs-1 mono-lg ChainResponse_TransactionCount" number="@(ChainResponse?.TransactionCount ?? 0)">
        @(ChainResponse?.TransactionCount.ToString("N0") ?? "0")
    </div>
</div>
<div class="px-1 py-3 text-right">
    <div class="py-1 fs-n3 text-light">BLOCK HEIGHT</div>
    <div class="fs-1 mono-lg ChainResponse_BlockHeight" number="@(ChainResponse?.BlockHeight ?? 0)">
        @(ChainResponse?.BlockHeight.ToString("N0") ?? "0")
    </div>
</div>